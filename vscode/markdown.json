	// }
	"vsnote_template_default": {
		"prefix": "vsnote_template_default",
		"body": [
			"---",
			"tags:",
			"- ",
			"---",
			"",
			"# Metadata",
			"- Title: ${TM_FILENAME_BASE/^\\d{4}-\\d{2}-\\d{2}_//}",
			"- CreateAt: $CURRENT_YEAR/$CURRENT_MONTH/$CURRENT_DATE",
